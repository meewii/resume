<resources>

    <!-- Base application theme. -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <!--<item name="android:actionBarSize">@dimen/height_header</item>-->
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/green</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_header</item>
        <!--<item name="android:paddingTop">0dp</item>-->
        <!--<item name="android:paddingBottom">0dp</item>-->
        <!--<item name="android:scaleType">fitStart</item>-->
        <!--<item name="android:titleTextStyle">@style/ActionBarTitleText</item>-->
    </style>

    <!-- ActionBar title text -->
    <style name="ActionBarTitleText">
        <item name="android:textColor">@color/text_titles</item>
        <item name="android:textSize">@dimen/fz_xlarge</item>
    </style>






    <style name="ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
